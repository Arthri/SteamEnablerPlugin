<Project Sdk="Microsoft.NET.Sdk">

  <!-- Build Configuration -->
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
  </PropertyGroup>



  <!-- Compiler Configuration -->
  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>



  <!-- Dependencies -->
  <ItemGroup>
    <PackageReference Include="TShock" Version="5.1.3" />
  </ItemGroup>



  <!-- Package Information -->
  <PropertyGroup>
    <Authors>Arthri</Authors>
    <Copyright>Copyright Â© Arthri 2021, 2023</Copyright>
    <Description>Enables Steam integration for TSAPI-based or TShock-based servers</Description>
    <PackageLicenseExpression>MIT-0</PackageLicenseExpression>
    <Version>1.2.0</Version>
  </PropertyGroup>



  <!-- Output Configuration -->
  <ItemGroup>
    <None Include="..\..\LICENSE" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>